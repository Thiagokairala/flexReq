<!DOCTYPE html>
<html>
<head>
  <title>Flexreq</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% questionnaires = Questionnaire.all %>
	<div class="container space_top">
	<nav class="navbar navbar-default" role="navigation">
		<div class="container-fluid">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<a class="navbar-brand">Hello</a>
			</div>
			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<ul class="nav navbar-nav">
				<li><%= link_to 'New project', new_questionnaire_path, :class => 'iu'%></li>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Your projects <span class="caret"></span></a>
						<ul class="dropdown-menu" role="menu">
							<% if questionnaires.size > 0 %>
								<% questionnaires.each do |questionnaire| %>
									<li><%= link_to questionnaire.name, questionnaire %></li>
								<% end %>
							<% end %>
						</ul>
					</li>
				</ul>

				

				
				<ul class="nav navbar-nav navbar-right">
				 	<li><a href="/users/sign_up">Sign Up</a></li>
                </ul>
				<ul class="nav navbar-nav navbar-right">
					<li><a href="#">Log Out</a></li>
				</ul>
			</div>
		</div>
	</nav>
</div>


		<%= yield %>


	</div>

</body>
</html>
